# Makefile for the school project

# Compiler
CC = gcc

# Source files
SRC = main.c file1.c file2.c

# Object files
OBJ = $(SRC:.c=.o)

# Executable name
NAME = school

# Program to delete files
RM = rm -f

# Compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# Main rule to build the executable
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Clean rule to delete temporary files and the executable
clean:
	$(RM) *~ $(NAME)

# Oclean rule to delete object files
oclean:
	$(RM) $(OBJ)

# Fclean rule to delete temporary files, the executable, and object files
fclean: clean oclean

# Re rule to force recompilation of source files
re: fclean all

# Dependency of object files on source files
$(OBJ): $(SRC)

# Ensure that the project does not compile if the header file m.h is missing
-include m.h

